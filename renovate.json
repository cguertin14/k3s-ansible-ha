{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["roles/k3s/templates/kube-vip\\.yaml\\.j2$"],
      "matchStrings": ["image:\\s*\"ghcr\\.io/kube-vip/kube-vip:(?<currentValue>v[\\d\\.]+)\""],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kube-vip/kube-vip"
    },
    {
      "fileMatch": ["inventory/cluster/group_vars/all\\.yml$"],
      "matchStrings": ["k3s_release_version:\\s*(?<currentValue>v[\\d\\.]+\\+k3s\\d+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k3s-io/k3s",
      "versioningTemplate": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\+k3s(?<build>\\d+)$"
    }
  ]
}
